{
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@webai-ext/core/*": [
        "../../core/src/*",
      ],
      "@webai-ext/core": [
        "../../core/src/index",
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "chrome"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
  ],
  "exclude": [
    "node_modules"
  ],
}