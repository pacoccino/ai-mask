{
    "name": "@ai-mask/monorepo",
    "version": "0.1.0",
    "scripts": {
        "build": "pnpm run --recursive --filter=!./forks/* build",
        "clean": "pnpm run --recursive --filter=!./forks/* clean",
        "lint": "pnpm run --recursive --filter=!./forks/* lint",
        "dev": "pnpm run --parallel --filter=!./forks/* dev ",
        "dev-p": "pnpm run --parallel --filter=!./forks/* dev"
    },
    "engines": {
        "node": ">=20",
        "pnpm": ">=8"
    },
    "devDependencies": {
        "typescript": "^5.3.3"
    }
}